<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

    <body>

        <%- include('partials/header') %>
            <main>


                <!-- Banner -->
                <div class="banner"></div>
                <!-- /Banner -->

                <!-- ultima visita -->
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Basado en tu Ãºltima visita</h2>
                        </div>
                        <% productos.forEach(producto => { %>
                            <% if (producto.category == "visited") { %>
                                <div class="col-12 col-sm-6 col-lg-3">
                                    <section class="product-box">
                                        <a href="/product/detail/<%=producto.id%>/<%=producto.category%>">
                                            <figure class="product-box_image">
                                                <img src="/images/<%=producto.image%>" alt="imagen de producto">
                                            </figure>
                                            <article class="product-box_data">
                                                <h2>$<%=toThousand(producto.price)%></h2>
                                                <span><% if (producto.discount > 0) { %>
                                                    <%=producto.discount%>% OFF
                                                    <% } %></span>
                                                <p><%=producto.name%></p>
                                                <i class="fas fa-truck"></i>
                                            </article>
                                        </a>
                                    </section>
                                </div>
                            <% } %>
                            
                        <% }) %>
                        
                    </div>
                </div>
                <!-- /ultima visita -->

                <!-- Ofertas -->
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Ofertas</h2>
                        </div>
                        <% productos.forEach(producto => { %>
                            <% if (producto.category == "in-sale") { %>
                                <div class="col-12 col-sm-6 col-lg-3">
                                    <section class="product-box">
                                        <a href="/product/detail/<%=producto.id%>/<%=producto.category%>">
                                            <figure class="product-box_image">
                                                <img src="/images/<%=producto.image%>" alt="imagen de producto">
                                            </figure>
                                            <article class="product-box_data">
                                                <h2>$<%=toThousand(producto.price)%></h2>
                                                <span><% if (producto.discount > 0) { %>
                                                    <%=producto.discount%>% OFF
                                                    <% } %></span>
                                                <p><%=producto.name%></p>
                                                <i class="fas fa-truck"></i>
                                            </article>
                                        </a>
                                    </section>
                                </div>
                            <% } %>
                            
                        <% }) %>
                        
                    </div>
                </div>
                <!-- /Ofertas -->

                <!-- footer -->

            </main>
            <%- include('partials/footer') %>
            <!-- /footer -->
    </body>

</html>

